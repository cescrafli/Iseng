@{
    ViewData["Title"] = "Storage & System";
}

<div class="dashboard-header">
    <div class="container-fluid">
        <div class="row align-items-center">
            <div class="col">
                <h1>Storage & Info <span class="status-badge">LIVE</span></h1>
            </div>
        </div>
    </div>
</div>

<div class="container-fluid">
    <div class="row" id="diskGrid">
        <div class="col-12 text-center py-5">
            <div class="spinner-border text-primary" role="status">
                <span class="visually-hidden">Loading...</span>
            </div>
            <p>Scanning Drives...</p>
        </div>
    </div>
</div>

@section Scripts {
    <script src="https://cdnjs.cloudflare.com/ajax/libs/microsoft-signalr/6.0.1/signalr.js"></script>
    <script>
        const connection = new signalR.HubConnectionBuilder()
            .withUrl("/monitorHub")
            .build();

        connection.on("ReceiveDiskInfo", function (message) {
            try {
                const disks = JSON.parse(message);
                let html = "";
                
                disks.forEach(function(d) {
                    const usedGB = (d.used / 1024 / 1024 / 1024).toFixed(1);
                    const totalGB = (d.total / 1024 / 1024 / 1024).toFixed(1);
                    const freeGB = (d.free / 1024 / 1024 / 1024).toFixed(1);
                    let color = "success";
                    if(d.percent > 70) color = "warning";
                    if(d.percent > 90) color = "danger";

                    // Use external gradient class to avoid inline style syntax issues in Razor
                    html += `
                    <div class="col-md-6 col-lg-4 mb-4">
                        <div class="card h-100 border-0">
                            <div class="card-title">
                                <div><i class="fas fa-hdd me-2"></i> ${d.device}</div>
                                <span class="badge bg-primary bg-opacity-25 text-primary">${d.mountpoint}</span>
                            </div>
                            <div class="card-body">
                                <h2 class="display-5 fw-bold mt-2 mb-1">${d.percent}%</h2>
                                <small class="text-secondary text-uppercase fw-bold" style="letter-spacing:1px; font-size:0.7rem;">${d.fstype} Filesystem</small>
                                
                                <div class="progress mt-3 mb-4" style="height: 8px; border-radius: 4px; background: rgba(0,0,0,0.05);">
                                    <div class="progress-bar bg-${color}" role="progressbar" style="width: ${d.percent}%; border-radius: 4px; box-shadow: 0 2px 5px rgba(0,0,0,0.1);"></div>
                                </div>
                                
                                <div class="row g-2 small text-secondary">
                                    <div class="col-4">
                                        <div class="fw-bold text-dark">${totalGB} GB</div>
                                        <div>Total</div>
                                    </div>
                                    <div class="col-4 border-start border-end text-center">
                                        <div class="fw-bold text-dark">${usedGB} GB</div>
                                        <div>Used</div>
                                    </div>
                                    <div class="col-4 text-end">
                                        <div class="fw-bold text-success">${freeGB} GB</div>
                                        <div>Free</div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>`;
                });
                
                document.getElementById("diskGrid").innerHTML = html;
            } catch(e) { console.error(e); }
        });

        connection.start();
    </script>
}
