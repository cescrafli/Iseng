@model IEnumerable<CyberMonitor.Models.AnomalyLog>

@{
    ViewData["Title"] = "Anomaly History";
}

<div class="card shadow-sm">
    <div class="card-header bg-primary text-white">
        <h4 class="mb-0"><i class="fas fa-history me-2"></i> Anomaly History Log</h4>
    </div>
    <div class="card-body">
        <p class="text-muted">Showing last 100 detected anomalies.</p>
        
        <div class="table-responsive">
            <table class="table table-hover table-striped">
                <thead class="table-dark">
                    <tr>
                        <th>Time</th>
                        <th>Type</th>
                        <th>Severity</th>
                        <th>Message</th>
                    </tr>
                </thead>
                <tbody>
                    @if (!Model.Any())
                    {
                        <tr>
                            <td colspan="4" class="text-center text-muted">No anomalies recorded yet.</td>
                        </tr>
                    }
                    else
                    {
                        @foreach (var item in Model)
                        {
                            <tr class="@(item.Severity == "CRITICAL" ? "table-danger" : (item.Severity == "WARNING" ? "table-warning" : ""))">
                                <td>@item.Timestamp.ToString("yyyy-MM-dd HH:mm:ss")</td>
                                <td>
                                    @if(item.Type == "CPU") { <span class="badge bg-danger">CPU</span> }
                                    else if(item.Type == "MEMORY") { <span class="badge bg-warning text-dark">MEM</span> }
                                    else { <span class="badge bg-secondary">@item.Type</span> }
                                </td>
                                <td>
                                    <strong>@item.Severity</strong>
                                </td>
                                <td>@item.Message</td>
                            </tr>
                        }
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        // Auto-refresh page every 30 seconds to show new logs
        setTimeout(function(){
           window.location.reload(1);
        }, 30000);
    </script>
}
